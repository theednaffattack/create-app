{
  "name": "@agent5/create-app",
  "version": "1.0.2",
  "description": "create-app CLI --An opinionated CLI to start any Typescript, TS-React, or JS-React style project.",
  "private": false,
  "types": "build/types/types.d.ts",
  "bin": {
    "create-app": "bin/create-app"
  },
  "bugs": "https://github.com/theednaffattack/create-app/issues",
  "scripts": {
    "format": "prettier --write **/*.{js,ts,tsx,json}",
    "lint": "eslint . --ext .ts",
    "clean-build": "rm -rf ./build",
    "compile": "tsc -p ./tsconfig.json",
    "copy-templates": "if [ -e ./src/templates ]; then cp -a ./src/templates ./build/; fi",
    "copy-scaffolds": "if [ -e ./src/scaffolds ]; then cp -a ./src/scaffolds ./build/; fi",
    "build": "yarn format && yarn lint && yarn clean-build && yarn compile && yarn copy-templates && yarn copy-scaffolds",
    "prepublishOnly": "yarn build",
    "test": "echo \"No test specified\"",
    "watch": "jest --watch",
    "snapupdate": "jest --updateSnapshot",
    "coverage": "jest --coverage"
  },
  "files": [
    "tsconfig.json",
    "tslint.json",
    "build",
    "LICENSE",
    "readme.md",
    "docs",
    "bin"
  ],
  "license": "MIT",
  "dependencies": {
    "app-root-path": "^3.0.0",
    "get-installed-path": "^4.0.8",
    "gluegun": "latest"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.11",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^24.1.0",
    "prettier": "^1.12.1",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.6.3"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
